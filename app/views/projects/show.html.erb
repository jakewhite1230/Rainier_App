<% @title = @project.invoice_number.to_s +  " | " + @project.title %>
<div class="projects clearfix">
<div class="columns medium-8">
  <h2>Project Details <span class="project-edit"><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_tenant_project_path(@project, tenant_id: @tenant.id) %></span></h2>
  <hr>
  <h1 class="project-title"><%= @project.title %></h1>
  <p class="project-details"><%= @project.details %></p>
  <p class="project-number">Invoice Number: <%= @project.invoice_number %></p>
</div>
<div class="columns medium-4">

    <% @date = @project.expected_completion_date %>
    <% @year = @date.strftime("%Y")
      @month = @date.strftime("%B")
      @day = @date.strftime("%e")
     %>
     <div class="calendar">
         <div class="calendarHead">
            <strong> <%= @month %> </strong>
        </div>
        <span><p><%= @day %></p></span>
     </div>
     <p class="project-completion-date">Expected Completion Date</p>

</div>

<div class="columns">
  <%= render 'uploads/list', uploads: @project.uploads %>
</div>
