<% @title = "Sign In"%>
<%= foundation_devise_error_messages! %>
<div class="large-5 large-centered columns form-section">
  <div class="login-box">
  <div class="column row">
  <div class="large-12 columns">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row form-header">
          <div class="login-icon"></div>
          <h5 class="form-title">Login to Your Rainier Dashboard</h5>
        </div>
      <div class="row">
              <span class="input input--yoshiko">
                 <%= f.email_field :email, class: "large-12 columns input__field input__field--yoshiko"%>
                <label class="input__label input__label--yoshiko" for="email">
                  <%= f.label :email, class: "input__label-content input__label-content--yoshiko"%>
                </label>
              </span>
          </div>

      <div class="row">
            <span class="input input--yoshiko">
            <%= f.password_field :password, autocomplete: "off", class: "large-12 columns input__field input__field--yoshiko"%>
             <label class="input__label input__label--yoshiko" for="password">
                  <%= f.label :password, class: "input__label-content input__label-content--yoshiko"%>
             </label>
            </span>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="row">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="row">
        <%= f.submit  t('.sign_in', :default => "Sign in"), class: "button expand large-12 large-centered columns blue-button" %>
      </div>
    <% end %>
  </div>
</div>
</div>
  <div class="row bottom-links">

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="form-service float-right"> Don't have an account? <%= link_to t(".sign_up", :default => "Join Today"), new_registration_path(resource_name) %></p>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <p class="form-service float-left"><%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name) %></p>
  <% end -%>
  </div>
</div>
