<% @title = "Sign Up"%>
<%= foundation_devise_error_messages! %>
<div class="large-5 large-centered columns form-section">
  <div class="login-box">
    <div class="row">
      <div class="large-12 columns">
         <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="row form-header">
          <div class="login-icon"></div>
          <h5 class="form-title">Get Started for Free</h5>
          <p class="form-subtitle">No Credit Card Needed</p>
        </div>
        <%= fields_for(:tenant) do |w| %>
          <div class="row">
            <span class="input input--yoshiko">
              <%= w.text_field :name, class: "large-12 columns input__field input__field--yoshiko"%>
                <label class="input__label input__label--yoshiko" for="name">
                <%= w.label :name, class: "input__label-content input__label-content--yoshiko"%>
                </label>
            </span>
          </div>
          <% end %>
          <div class="row">
              <span class="input input--yoshiko">
                 <%= f.email_field :email, class: "large-12 columns input__field input__field--yoshiko"%>
                <label class="input__label input__label--yoshiko" for="email">
                  <%= f.label :email, class: "input__label-content input__label-content--yoshiko"%>
                </label>
              </span>
          </div>
          <div class="row">
            <span class="input input--yoshiko">
            <%= f.password_field :password, autocomplete: "off", class: "large-12 columns input__field input__field--yoshiko"%>
             <label class="input__label input__label--yoshiko" for="password">
                  <%= f.label :password, class: "input__label-content input__label-content--yoshiko"%>
             </label>
            </span>
          </div>
          <div class="row">
            <span class="input input--yoshiko">
               <%= f.password_field :password_confirmation, autocomplete: "off", class: "large-12 columns input__field input__field--yoshiko"%>
                <label class="input__label input__label--yoshiko" for="password">
                  <%= f.label :password_confirmation, class: "input__label-content input__label-content--yoshiko"%>
                </label>
             </span>
          </div>
          <div class="row">
            <%= f.submit t('.sign_up', :default => "Sign Up Now"), class: "button expand large-12 large-centered columns blue-button" %>
            <p class="form-service">By clicking "Sign Up Now" I agree to Rainier's Terms of Service.</p>
          </div>
        <% end %>
  </div>
</div>
</div>
 <div class="row bottom-links">
  <%- if controller_name != 'sessions' %>
    <p class="form-service">Already have an account? <%= link_to t(".sign_in", :default => "Log In!"), new_session_path(resource_name) %></p>
  <% end -%>
  </div>
</div>